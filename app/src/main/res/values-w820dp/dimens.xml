    <!--<dimen name="activity_horizontal_margin">16dp</dimen>-->
    <dimen name="activity_vertical_margin">84dp</dimen>
    <dimen name="widget_horizontal_margin">5dp</dimen>
    <dimen name="widget_vertical_margin">15dp</dimen>
    <!-- Per the design guidelines, navigation drawers should be between 240dp and 320dp:
         https://developer.android.com/design/patterns/navigation-drawer.html -->
    <dimen name="navigation_drawer_width">360dp</dimen>
    <dimen name="toolbar_elevation">4dp</dimen>
    <dimen name="toolbar_height">100dp</dimen>
</resources>

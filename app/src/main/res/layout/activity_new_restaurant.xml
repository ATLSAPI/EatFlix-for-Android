<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.melvin.apps.materialtests.NewRestaurant"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/welcome_text_view"
        android:text="@string/restaurant_registration_msg"
        android:textColor="#ff0c0d1f"
        android:textStyle="bold"
        android:paddingBottom="5dp"
        android:textSize="20dp" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="100"
        android:gravity="center"
        android:paddingBottom="5dp"
        android:layout_marginTop="15dp" >


        <EditText
            android:layout_weight="100"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/name_edit_text"
            android:hint="@string/restaurant_name_hint"
            />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="100"
        android:gravity="center"
        android:paddingBottom="5dp"
        android:layout_marginTop="10dp" >


        <EditText
            android:layout_weight="100"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/email_edit_text"
            android:inputType="textEmailAddress"
            android:hint="@string/email_hint"
            />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="100"
        android:gravity="center"
        android:paddingBottom="5dp"
        android:layout_marginTop="10dp"  >


        <EditText
            android:layout_weight="100"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/telephone_edit_text"
            android:inputType="number"
            android:hint="@string/telephone_hint"/>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="100"
        android:gravity="center"
        android:paddingBottom="5dp"
        android:layout_marginTop="10dp">


        <EditText
            android:layout_weight="100"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/postcode_edit_text"
            android:singleLine="true"
            android:hint="@string/postcode_hint"/>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="100"
        android:gravity="center"
        android:paddingBottom="5dp"
        android:layout_marginTop="10dp"  >


        <EditText
            android:layout_weight="100"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/address_edit_text"
            android:singleLine="true"
            android:hint="@string/address_hint"/>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="100"
        android:gravity="center"
        android:paddingBottom="5dp"
        android:layout_marginTop="10dp"  >


        <EditText
            android:layout_weight="100"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/about_edit_text"
            android:singleLine="true"
            android:hint="@string/about_hint"/>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="100"
        android:gravity="center"
        android:paddingBottom="5dp"
        android:layout_marginTop="10dp"  >


        <Spinner
            android:id="@+id/type_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/type_arrays"
            android:prompt="@string/type_hint" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="100"
        android:gravity="center"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:layout_marginTop="30dp" >


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/error_text_view"/>


    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="120"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="10sp">


        <Button
            android:layout_width="153dp"
            android:layout_height="56dp"
            android:id="@+id/cancel_btn"
            android:text="@string/cancel_text"
            android:textSize="20sp"
            android:textColor="#666666"/>


        <Button
            android:layout_width="153dp"
            android:layout_height="56dp"
            android:text="@string/register_text"
            android:id="@+id/register_btn"
            android:textSize="20sp"
            android:textColor="#666666"/>


    </LinearLayout>


</LinearLayout>
